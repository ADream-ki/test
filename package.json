{
  "name": "test",
  "version": "0.1.0",
  "private": true,
  "keywords": [],
  "main": "main.js",
  "description": "test",
  "author": "Adream",
  "license": "ISC",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "electron": "^1.7.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-scripts": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron-start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder -p always"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "electronDemo",
    "productName": "electron-demo",
    "files": [
      "build/**/*",
      "node_modules/**/*",
      "package.json",
      "main.js",
      "preload.js"
    ],
    "directories": {
      "output": "release",
      "buildResources": "assets"
    },
    "extends": null,
    "mac": {
      "category": "public.app-category.productivity",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "background": "assets/appdmg.png",
      "icon": "assets/icon.icns",
      "iconSize": 100,
      "contents": [
        {
          "x": 380,
          "y": 280,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 110,
          "y": 280,
          "type": "file"
        }
      ],
      "window": {
        "width": 500,
        "height": 500
      }
    },
    "win": {
      "target": [
        "msi",
        "nsis",
        "zip"
      ],
      "verifyUpdateCodeSignature": false,
      "icon": "assest/icon.ico",
      "artifactName": "${productName}-Web-Setup-${version}.${ext}"
    },
    "nsis": {
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": false
    },
    "asar": false,
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "icon": "assest/icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Chen-Lun-Hao",
        "repo": "test"
      }
    ]
  }
}
